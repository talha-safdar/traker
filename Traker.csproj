    <Resource Include="Resources\Fonts\Roboto-Italic.ttf" />
    <Resource Include="Resources\Fonts\Roboto.ttf" />
    <Resource Include="Resources\Fonts\RobotoMono-Italic.ttf" />
    <Resource Include="Resources\Fonts\RobotoMono.ttf" />
    <Resource Include="Resources\Media\Images\Icons\close-button.png" />
    <Resource Include="Resources\Media\Images\Icons\minimise-button.png" />
  </ItemGroup>

</Project>
