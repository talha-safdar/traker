<Window x:Class="Traker.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:Traker.Views"
        xmlns:cal="http://caliburnmicro.com"
        mc:Ignorable="d"
        Title="Traker" MinHeight="900" MinWidth="1400"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        Background="Transparent"
        MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight}}"
        MaxWidth="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth}}"
        >

    <WindowChrome.WindowChrome>
        <shell:WindowChrome 
            CaptionHeight="35" 
            ResizeBorderThickness="15" 
            GlassFrameThickness="0" 
            CornerRadius="20" />
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource MainBackgroundBrush}" cal:Message.Attach="[Event PreviewMouseDown] = [Action OnMouseDownEvent($source)]">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.07*"/> <!-- top bar-->
                <RowDefinition Height="*"/> <!-- body -->
            </Grid.RowDefinitions>

            <!-- top bar -->
            <Grid Grid.Row="0" Background="{StaticResource TopBarBackgroundBrush}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid Margin="20,0,20,0">
                    <TextBlock Text="TRAKER" FontWeight="ExtraBlack" Foreground="{StaticResource FontPrimaryBrush}" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Margin="0, 0, 20, 0" x:Name="MinimiseWindow" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Image Width="25" Source="/Resources/Media/Images/Icons/minimise-button.png" Opacity="0.9" />
                        </Border>
                        <Border Margin="0, 0, 0, 0" x:Name="ExitApplication" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Image Width="25" Source="/Resources/Media/Images/Icons/close-button.png" Opacity="0.9" />
                        </Border>    
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- body -->
            <Grid Grid.Row="1" Background="Black">
                <ContentControl x:Name="ActiveItem" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
            </Grid>
        </Grid>
    </Border>
</Window>
