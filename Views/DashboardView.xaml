<UserControl x:Class="Traker.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Traker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F0F0F0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" /> <!-- side panel -->
                <ColumnDefinition Width="*" /> <!-- main panel -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" /> <!--main part -->
                <RowDefinition Height="1.5*" /> <!-- footer -->
            </Grid.RowDefinitions>
            
            <!-- side panel -->
            <Grid Grid.Column="0" Grid.RowSpan="2" Margin="20,20,10,20">
                <Border Background="{StaticResource SilverBorderBrush }" CornerRadius="20">

                </Border>
            </Grid>
            
            <!-- main body -->
            <Grid Grid.Column="1" Grid.Row="0" Margin="10,20,20,10">
                <Border Background="{StaticResource SuccessBorderBrush}" CornerRadius="20">
                    <ScrollViewer VerticalScrollBarVisibility="Visible"
                            Margin="0,0,0,0">
                        <Grid Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <!-- name in db          0 -->
                                <ColumnDefinition Width="0.01*" />
                                <!-- spacer -->
                                <ColumnDefinition Width="*" />
                                <!-- email in db         1 -->
                                <ColumnDefinition Width="0.01*" />
                                <!-- spacer -->
                                <ColumnDefinition Width="0.5*" />
                                <!-- phone in db         2 -->
                                <ColumnDefinition Width="0.01*" />
                                <!-- spacer -->
                                <ColumnDefinition Width="*" />
                                <!-- Description in db   3 -->
                                <ColumnDefinition Width="0.01*" />
                                <!-- spacer -->
                                <ColumnDefinition Width="0.5*" />
                                <!-- Status in db        4 -->
                                <ColumnDefinition Width="0.01*" />
                                <!-- spacer -->
                                <ColumnDefinition Width="0.5*" />
                                <!-- Price in db         5 -->
                                <ColumnDefinition Width="0.01*" />
                                <!-- spacer -->
                                <ColumnDefinition Width="0.2*" />
                                <!-- isPaid in db        6 -->
                            </Grid.ColumnDefinitions>

                            <!-- get font sorted -->

                            <Grid Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="Client Name" FontSize="22" FontWeight="Medium" />

                                <!-- Dynamic rows -->
                                <ItemsControl Margin="0,40,0,0" ItemsSource="{Binding ClientNames}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding}"
                                                FontSize="18"
                                                TextAlignment="Left"
                                                Margin="5"/>

                                                <!-- divider line -->
                                                <!--<Rectangle Height="1" Fill="Gray" HorizontalAlignment="Stretch" Width="300" />-->
                                                <!-- divider line -->
                                                <Border Height="1" Background="Gray" Opacity="1"/>
                                            </StackPanel>
                                            
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                            <!-- spacer -->
                            <Grid Grid.Column="1" Margin="0,40,0,0">
                                <Border Opacity="0.3" VerticalAlignment="Stretch">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="#666666" Offset="0.0"/>
                                            <GradientStop Color="#666666" Offset="1.0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- email -->
                            <Grid Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="Email" FontSize="22" FontWeight="Medium" />
                                <!-- Dynamic rows -->
                                <ItemsControl Margin="0,40,0,0" ItemsSource="{Binding ClientEmails}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding}"
                                                FontSize="18"
                                                TextAlignment="Left"
                                                Margin="5"/>

                                                <!-- divider line -->
                                                <!--<Rectangle Height="1" Fill="Gray" HorizontalAlignment="Stretch" Width="300" />-->
                                                <!-- divider line -->
                                                <Border Height="1" Background="Gray" Opacity="1"/>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                            <!-- spacer -->
                            <Grid Grid.Column="3" Margin="0,40,0,0">
                                <Border Opacity="0.3" VerticalAlignment="Stretch">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="#666666" Offset="0.0"/>
                                            <GradientStop Color="#666666" Offset="1.0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- phone -->
                            <Grid Grid.Column="4" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="Phone" FontSize="22" FontWeight="Medium" />
                                <!-- Dynamic rows -->
                                <ItemsControl Margin="0,40,0,0" ItemsSource="{Binding ClientPhones}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding}"
                                                FontSize="18"
                                                TextAlignment="Center"
                                                Margin="5"/>

                                                <!-- divider line -->
                                                <!--<Rectangle Height="1" Fill="Gray" HorizontalAlignment="Stretch" Width="300" />-->
                                                <!-- divider line -->
                                                <Border Height="1" Background="Gray" Opacity="1"/>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                            <!-- spacer -->
                            <Grid Grid.Column="5" Margin="0,40,0,0">
                                <Border Opacity="0.3" VerticalAlignment="Stretch">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="#666666" Offset="0.0"/>
                                            <GradientStop Color="#666666" Offset="1.0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- job -->
                            <Grid Grid.Column="6" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="Description" FontSize="22" FontWeight="Medium" />
                                <!-- Dynamic rows -->
                                <ItemsControl Margin="0,40,0,0" ItemsSource="{Binding JobDescriptions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding}"
                                                FontSize="18"
                                                TextAlignment="Left"
                                                Margin="5"/>

                                                <!-- divider line -->
                                                <!--<Rectangle Height="1" Fill="Gray" HorizontalAlignment="Stretch" Width="300" />-->
                                                <!-- divider line -->
                                                <Border Height="1" Background="Gray" Opacity="1"/>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                            <!-- spacer -->
                            <Grid Grid.Column="7" Margin="0,40,0,0">
                                <Border Opacity="0.3" VerticalAlignment="Stretch">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="#666666" Offset="0.0"/>
                                            <GradientStop Color="#666666" Offset="1.0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- status -->
                            <Grid Grid.Column="8" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="Status" FontSize="22" FontWeight="Medium" />
                                <!-- Dynamic rows -->
                                <ItemsControl Margin="0,40,0,0" ItemsSource="{Binding JobStatus}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding}"
                                                FontSize="18"
                                                TextAlignment="Center"
                                                Margin="5"/>

                                                <!-- divider line -->
                                                <!--<Rectangle Height="1" Fill="Gray" HorizontalAlignment="Stretch" Width="300" />-->
                                                <!-- divider line -->
                                                <Border Height="1" Background="Gray" Opacity="1"/>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                            <!-- spacer -->
                            <Grid Grid.Column="9" Margin="0,40,0,0">
                                <Border Opacity="0.3" VerticalAlignment="Stretch">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="#666666" Offset="0.0"/>
                                            <GradientStop Color="#666666" Offset="1.0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- price -->
                            <Grid Grid.Column="10" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="Price" FontSize="22" FontWeight="Medium" />
                                <!-- Dynamic rows -->
                                <ItemsControl Margin="0,40,0,0" ItemsSource="{Binding JobPrice}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding}"
                                                FontSize="18"
                                                TextAlignment="Left"
                                                Margin="5"/>

                                                <!-- divider line -->
                                                <!--<Rectangle Height="1" Fill="Gray" HorizontalAlignment="Stretch" Width="300" />-->
                                                <!-- divider line -->
                                                <Border Height="1" Background="Gray" Opacity="1"/>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                            <!-- spacer -->
                            <Grid Grid.Column="11" Margin="0,40,0,0">
                                <Border Opacity="0.3" VerticalAlignment="Stretch">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0"/>
                                            <GradientStop Color="#666666" Offset="0.0"/>
                                            <GradientStop Color="#666666" Offset="1.0"/>
                                            <GradientStop Color="Transparent" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- invoiced -->
                            <Grid Grid.Column="12" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="Paid" FontSize="22" FontWeight="Medium" />
                                <!-- Dynamic rows -->
                                <ItemsControl Margin="0,40,0,0" ItemsSource="{Binding Paid}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding}"
                                                FontSize="18"
                                                TextAlignment="Left"
                                                Margin="5"/>

                                                <!-- divider line -->
                                                <!--<Rectangle Height="1" Fill="Gray" HorizontalAlignment="Stretch" Width="300" />-->
                                                <!-- divider line -->
                                                <Border Height="1" Background="Gray" Opacity="1"/>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- bottom section -->
            <Grid Grid.Column="1" Grid.Row="1" Margin="10,10,20,20">
                <Border Background="{StaticResource SilverBorderBrush }" CornerRadius="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" /> <!-- left section -->
                            <ColumnDefinition Width="*" /> <!-- middle-1 section -->
                            <ColumnDefinition Width="*" /> <!-- middle-2 section -->
                            <ColumnDefinition Width="*" /> <!-- right section -->
                        </Grid.ColumnDefinitions>
                        
                        <!-- left section -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- sub-left section -->
                            <Grid Grid.Row="0">
                                
                            </Grid>
                            
                            <Grid Grid.Row="1">
                                
                            </Grid>
                            
                            <Grid Grid.Row="2">
                                
                            </Grid>
                            
                            
                        </Grid>
                        
                        <!-- middle-1 section overdue -->
                        <Grid Grid.Column="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,20,0" Text="Overdue:" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Regular" />
                                <TextBlock Text="{Binding MoneyOverdue}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" FontWeight="Medium" />                                
                            </StackPanel>
                        </Grid>
                        
                        <!-- middle-2 section received -->
                        <Grid Grid.Column="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,20,0" Text="Received:" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Regular" />
                                <TextBlock Text="{Binding MoneyReceived}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" FontWeight="Medium" />                                
                            </StackPanel>
                        </Grid>
                        
                        <!-- right section -->
                        <Grid Grid.Column="3">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,20,0" Text="Outstanding:" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Regular" />
                                <TextBlock Text="{Binding MoneyToReceive}" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="32" FontWeight="Medium" />                                
                            </StackPanel>
                        </Grid>    
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
