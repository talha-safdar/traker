<UserControl x:Class="Traker.Views.JobDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Traker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="250">
    <Border Background="{StaticResource BorderBrush}" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" /> <!-- status -->
                <RowDefinition Height="*" /> <!-- spacer -->
                <RowDefinition Height="*" /> <!-- folder / invoice -->
                <RowDefinition Height="*" /> <!-- spacer -->
                <RowDefinition Height="*" /> <!-- edit / cancel -->
            </Grid.RowDefinitions>
        </Grid>
    </Border>
</UserControl>
